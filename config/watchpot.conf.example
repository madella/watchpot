# WatchPot Configuration
# Edit these values according to your setup

# PHOTO SCHEDULE - Times to capture photos (comma-separated HH:MM format)
PHOTO_TIMES=08:00,10:00,12:00,14:00,16:00,18:00

# EMAIL SCHEDULE - When to send daily email with all photos
EMAIL_TIME=19:00

# PHOTO SETTINGS
PHOTO_WIDTH=1920
PHOTO_HEIGHT=1080
PHOTO_QUALITY=95
PHOTOS_DIR=/var/lib/watchpot/photos
RETENTION_DAYS=7

# EMAIL SETTINGS (REQUIRED - Replace with your details)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
USE_TLS=true
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password
RECIPIENTS=recipient1@example.com,recipient2@example.com

# EMAIL TEMPLATE
EMAIL_SUBJECT='WatchPot Daily Report - {date}'
EMAIL_BODY='Hello! WatchPot captured {count} photos today at {times}. System info below.'

# SYSTEM SETTINGS
LOG_LEVEL=INFO
MAX_RETRIES=3
RETRY_DELAY=30
